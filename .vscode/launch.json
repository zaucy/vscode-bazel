{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}/bazel-bin/vscode-bazel"],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/bazel-bin/vscode-bazel/src/**/*.js"],
            "preLaunchTask": "build //:vscode-bazel",
        },
        {
            "name": "Launch Debug Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/src/debug-adapter/client.ts",
            "args": ["--server=4711"],
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/bazel-bin/vscode-bazel/src/**/*.js"]
        }
    ],
    "compounds": [
        {
            "name": "Extension and Debug Server",
            "configurations": [
                "Launch Extension",
                "Launch Debug Server"
            ]
        }
    ]
}
